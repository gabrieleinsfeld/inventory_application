<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Document</title>
    <script>
      function confirmDeletion(button) {
        const confirmed = confirm(
          "Are you sure you want to delete this topic?"
        );
        console.log(this);
        if (confirmed) {
          // If confirmed, submit the form
          const form = button.closest("form");
          form.submit();
        } else {
          // If not confirmed, do nothing (cancel deletion)
          return false;
        }
      }
    </script>
  </head>
  <body>
    <div id="container">
      <div class="nav-bar">
        <h1>List of Topics</h1>
        <ul>
          <% topics.forEach(function(topic) { %>
          <li>
            <a href="/get/<%= topic.id %>"><%= topic.topic_name %></a>
            <form
              id="delete-form-<%= topic.id %>"
              action="/delete/topic/<%= topic.id %>"
              method="POST"
            >
              <button
                type="button"
                onclick="confirmDeletion(this)"
                data-id="<%= topic.id %>"
              >
                X
              </button>
            </form>
          </li>

          <% }); %>
        </ul>
      </div>
      <div class="display-youtubers"></div>
    </div>

    <div class="button-div">
      <button><a href="/add/youtuber">Add Youtuber</a></button>
      <button><a href="/add/topic">Add Topic</a></button>
      <button><a href="/add/video">Add Video</a></button>
    </div>
  </body>
</html>
